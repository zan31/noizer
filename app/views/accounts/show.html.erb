      <%end%>
    </div>
  <div class="card-footer text-muted">
     <div class="row g-0">
    <div class="col-md-6">
  <div class="d-inline">
    <%= song.likes.count %> <%= (song.likes.count) == 1 ? 'Like' : 'Likes'%>
    |
    <%= song.comments.count %> <%= (song.comments.count) == 1 ? 'Comment' : 'Comments'%>
